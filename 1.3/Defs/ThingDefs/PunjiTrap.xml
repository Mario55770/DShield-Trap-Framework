    <TrapSpringChance>1.0</TrapSpringChance>
  </statBases>
  <stuffCategories>
    <li>Metallic</li>
    <li>Woody</li>
    <li>Stony</li>
  </stuffCategories>
  <costStuffCount>45</costStuffCount>
  <designationCategory>Security</designationCategory>
  <designationHotKey>Misc6</designationHotKey>
